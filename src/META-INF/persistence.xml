<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="YnovAppREST">
	<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	<jta-data-source>java:/db_ynovapp</jta-data-source>
	<class>metier.entities.Event</class>
	<class>metier.entities.Appointment</class>
	<class>metier.entities.News</class>
	<class>metier.entities.StudentOffice</class>
	
	<class>metier.entities.BePart</class>
	<class>metier.entities.Contains</class>
	<class>metier.entities.Follow</class>
	<class>metier.entities.ModuleMaster</class>
	<class>metier.entities.Picture</class>
	<class>metier.entities.Receiver</class>
	<class>metier.entities.Sender</class>
	<class>metier.entities.User</class>
	<class>metier.entities.UserGroup</class>
	
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/DB_YnovApp"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="AdminDB1*"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
